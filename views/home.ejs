<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To Do List</title>
    <link rel="stylesheet" href="style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
  </head>
  <body>
    <div class="nav">
      <h1 class="heading">Welcome <%= username%></h1>
      <h3><a class="logout" href="/logout">Logout</a></h3>
    </div>
    <div class="container">
      <div class="left">
        <h1>Add Task</h1>
        <textarea
          class="input_box"
          name=""
          id="text"
          placeholder="Enter your task..."
        ></textarea>
      </div>
      <div class="right">
        <h1>Task List</h1>
        <p>See your task below</p>
        <ul id="list">
          <!-- <li><img src="images/image.webp" alt="img" srcset="" />Task 1</li>
          <li>Task 1</li> -->
        </ul>
      </div>
    </div>
    <script src="script.js"></script>
    <script src="script1.js"></script>
  </body>
</html>
